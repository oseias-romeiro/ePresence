{% extends "base.jinja2" %}

{% block content %}
    
    <div class="d-flex justify-content-center">
        <form class="form" method="post" autocomplete="off">
            <h2>{% block title %}Profile{% endblock %}</h2>
            <br>
            {{ form.csrf_token }}

            {{ form.name.label }}
            {{ form.name(class_="form-control") }}

            {{ form.password1.label }}
            {{ form.password1(class_="form-control") }}

            {{ form.password2.label }}
            {{ form.password2(class_="form-control") }}

            <br>
            <div class="text-center">
                <button class="btn btn-success" style="width: 40%;" type="submit">Edit</button>
                <a style="width: 40%;" href="{{ url_for('call_app.home') }}" class="btn btn-dark" type="button" class="btn-cancel">Cancel</a>
            </div>
            <br>
        </form>
    </div>
    

{% endblock %}
