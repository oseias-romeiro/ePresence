{% extends "base.jinja2" %}

{% block content %}
    
    <div class="d-flex justify-content-center">
        <form method="post" autocomplete="off" style="max-width: 500px;">
            <h2>{% block title %}Editando{% endblock %} perfil</h2>
            <br>
            {{ form.csrf_token }}

            {{ form.matricula.label }}<br>
            {{ form.matricula(class_="form-control") }}<br>

            {{ form.name.label }}<br>
            {{ form.name(class_="form-control") }}<br>

            {{ form.password1.label }}<br>
            {{ form.password1(class_="form-control") }}<br>

            {{ form.password2.label }}<br>
            {{ form.password2(class_="form-control") }}<br>

            {{ form.professor.label }}<br>
            {{ form.professor }}<br>

            <br>
            <div style="text-align: center;">
                <button class="btn btn-primary" type="submit">Editar</button>
                <a href="/">
                    <button class="btn btn-secondary" type="button" class="btn-cancel">Cancelar</button>
                </a>
                <br>
            </div>
        </form>
    </div>
    

{% endblock %}
