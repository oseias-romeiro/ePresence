{% extends "base.jinja2" %}

{% block content %}

    <div class="d-flex justify-content-center">
        <form method="post" autocomplete="off" style="width: 500px;">
            <h2 style="text-align: center;">{% block title %}Login{% endblock %}</h2>
            <br>

            {{ form.csrf_token }}

            {{ form.register.label }}<br>
            {{ form.register(class_="form-control") }}<br>

            {{ form.password.label }}<br>
            {{ form.password(class_="form-control") }}<br>
            <br>

            <div style="text-align: center;">
                <button class="btn btn-primary" type="submit">Login</button>
                <a href="/">
                    <button class="btn btn-secondary" type="button" class="btn-cancel">Cancel</button>
                </a>
                <br>
                <a href="/account/sign_up">Create account</a>
            </div>
        </form>
    </div>
    
{% endblock %}
