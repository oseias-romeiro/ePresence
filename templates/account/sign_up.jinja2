{% extends "base.jinja2" %}

{% block content %}
    
    <div class="d-flex justify-content-center">
        <form method="post" autocomplete="off" class="form">
            <h2 class="text-center">{% block title %}Sign up{% endblock %}</h2>
            <hr>
            {{ form.csrf_token }}

            {{ form.name.label }}
            {{ form.name(class_="form-control") }}

            {{ form.password1.label }}
            {{ form.password1(class_="form-control") }}

            {{ form.password2.label }}
            {{ form.password2(class_="form-control") }}

            {{ form.role.label }}: {{ form.role(class_="form-select") }}<br>

            <br>
            <div class="text-center">
                <button style="width: 40%;" class="btn btn-success" type="submit">Done</button>
                <a style="width: 40%;" href="{{ url_for('account_app.sign_in') }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

{% endblock %}
