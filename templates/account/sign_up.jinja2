{% extends "base.jinja2" %}

{% block content %}
    
    <div class="d-flex justify-content-center">
        <form method="post" autocomplete="off" style="width: 500px;">
            <h2 style="text-align: center;">{% block title %}Cadastro{% endblock %}</h2>

            {{ form.csrf_token }}

            {{ form.matricula.label }}<br>
            {{ form.matricula(class_="form-control") }}<br>

            {{ form.name.label }}<br>
            {{ form.name(class_="form-control") }}<br>

            {{ form.password1.label }}<br>
            {{ form.password1(class_="form-control") }}<br>

            {{ form.password2.label }}<br>
            {{ form.password2(class_="form-control") }}<br>

            {{ form.professor.label }}: {{ form.professor }}<br>

            <br>
            <div style="text-align: center;">
                <button class="btn btn-primary" type="submit">Cadastrar</button>
                <a href="/account/sign_in">
                    <button class="btn btn-secondary" type="button" class="btn-cancel">Cancelar</button>
                </a>
            </div>
        </form>
    </div>

{% endblock %}
